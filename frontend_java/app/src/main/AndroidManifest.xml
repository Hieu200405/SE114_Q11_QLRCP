<?xml version="1.0" encoding="utf-8"?>
<!--
  File: AndroidManifest.xml
  Ý nghĩa: Khai báo cấu hình, quyền và thành phần chính của app Android.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Quyền query packages để mở apps ngân hàng (Android 11+) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!--
      Quyền truy cập bộ nhớ cho các phiên bản Android khác nhau:
      - READ_EXTERNAL_STORAGE: Dành cho Android 12L (API 32) trở xuống.
      - READ_MEDIA_*: Dành cho Android 13 (API 33) trở lên, cấp quyền truy cập đầy đủ.
      - READ_MEDIA_VISUAL_USER_SELECTED: Dành cho Android 14 (API 34) trở lên,
        xử lý trường hợp người dùng chỉ chọn một số ảnh/video nhất định.
    -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
        
    <!-- Khai báo các packages cần query (thay thế cho QUERY_ALL_PACKAGES) -->
    <queries>
        <!-- Banking apps -->
        <package android:name="com.mservice.momotransfer" />
        <package android:name="vn.com.vng.zalopay" />
        <package android:name="com.viettel.viettelpost" />
        <package android:name="com.vnpay.ebanking" />
        <package android:name="com.VCB" />
        <package android:name="com.mbmobile" />
        
        <!-- Intent schemes -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="momo" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="zalopay" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="viettelmoney" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="vnpayapp" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="vcbdigibank" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="mbmobile" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <!-- MainActivity: Màn hình chính và là điểm khởi đầu của ứng dụng -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Đăng nhập/Đăng ký -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <!-- ========== User ========== -->
        <activity
            android:name=".activities.UserDetailFilm"
            android:exported="false" />
        <activity
            android:name=".activities.UserShowListBroadcast"
            android:exported="false" />
        <activity
            android:name=".activities.UserShowSeatsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.UserMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UserAdminShowDetailTicket"
            android:exported="false" />
        <activity
            android:name=".activities.UserActivityHistoryBookingTicket"
            android:exported="false" />
        <activity
            android:name=".activities.UserActivityProfile"
            android:exported="false" />
        <activity
            android:name=".activities.UserEditProfile"
            android:exported="false" />

        <!-- ========== Admin ========== -->
        <activity
            android:name=".activities.AdminMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityProfile"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityHistoryBooking"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityManageRoom"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityEditRoom"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityAddRoom"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityManageFilm"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityManageUser"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityEditProfileUser"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityCreateUser"
            android:exported="false" />
        <activity
            android:name=".activities.AdminDetailFilm"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityListBroadcast"
            android:exported="false" />
        <activity
            android:name=".activities.AdminShowSeatsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityCreateBroadcast"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityCreateNewFilm"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivityUpdateFilm"
            android:exported="false" />
    </application>

</manifest>

