<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/headerLogo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_logo_toto_cinema"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_logo_circle"
            android:padding="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" />

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="QUẢN LÝ RẠP"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

    <!-- Search & Filter Section -->
    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_light"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:drawableTint="@color/secondary_text"
            android:hint="Tìm kiếm rạp..."
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnMyLocation"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle_button"
            android:contentDescription="My Location"
            android:padding="10dp"
            android:src="@drawable/ic_navigate"
            app:tint="@color/primary_blue" />

    </LinearLayout>

    <!-- User Location Info -->
    <TextView
        android:id="@+id/tvUserLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_navigate"
        android:drawableTint="@color/primary_blue"
        android:drawablePadding="8dp"
        android:text="Đang xác định vị trí..."
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch"
        tools:visibility="visible" />

    <!-- Cinema List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCinemas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomMenu"
        app:layout_constraintTop_toBottomOf="@id/tvUserLocation"
        tools:listitem="@layout/item_cinema" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:alpha="0.5"
            android:src="@drawable/ic_navigate"
            app:tint="#888888" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Không tìm thấy rạp chiếu phim"
            android:textColor="#888888"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch" />

    <!-- FAB Add Cinema (Admin only) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="70dp"
        android:contentDescription="Add Cinema"
        android:src="@drawable/ic_add"
        android:visibility="gone"
        app:backgroundTint="#3E5CAD"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFF"
        tools:visibility="visible" />

    <!-- Bottom Menu Bar -->
    <LinearLayout
        android:id="@+id/layoutBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_home"
            app:tint="#888888" />

        <ImageView
            android:id="@+id/imageManageFilm"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_manage_film"
            app:tint="#888888" />

        <ImageView
            android:id="@+id/imageManageRoom"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_manage_room"
            app:tint="#888888" />

        <ImageView
            android:id="@+id/imageManageCinema"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_cinema"
            app:tint="@color/colorTextIcons" />

        <ImageView
            android:id="@+id/imageManageUser"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_manage_user"
            app:tint="#888888" />

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_user"
            app:tint="#888888" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

