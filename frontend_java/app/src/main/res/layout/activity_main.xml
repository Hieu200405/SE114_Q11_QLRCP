<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:fitsSystemWindows="true"
    android:padding="24dp">

    <ImageView
        android:id="@+id/shapeGlow"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:alpha="0.25"
        android:background="@drawable/bg_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/logoContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintTop_toTopOf="@+id/shapeGlow"
        app:layout_constraintBottom_toBottomOf="@+id/shapeGlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.6"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/appLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_movie"
        android:contentDescription="@string/app_name"
        android:tint="@color/colorTextIcons"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
        app:layout_constraintTop_toTopOf="@+id/logoContainer"
        app:layout_constraintBottom_toBottomOf="@+id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_bold"
        android:letterSpacing="0.02"
        android:text="TOTO CINEMA"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#C7CCFF"
        android:textSize="14sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appLogo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_bold"
        android:lineSpacingExtra="6dp"
        android:text="Đặt vé, quản lý chiếu phim và tận hưởng hành trình điện ảnh ngay trên điện thoại của bạn."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng nhập để tiếp tục hoặc tạo tài khoản mới để bắt đầu trải nghiệm."
        android:textAlignment="center"
        android:textColor="#AEB5F9"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="20dp"
        app:cardBackgroundColor="#1F2547"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bắt đầu ngay"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đăng nhập để tiếp tục công việc hoặc đăng ký tài khoản mới."
                android:textColor="#B5BDD6"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:onClick="goToLogin"
                android:text="Đăng nhập"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="#3D56F0"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_login"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconSize="20dp"
                app:iconTint="@android:color/white"
                app:rippleColor="#803C4BFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:onClick="goToRegister"
                android:text="Tạo tài khoản mới"
                android:textAllCaps="false"
                android:textColor="#FFC46B"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_register"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconSize="20dp"
                app:iconTint="#FFC46B"
                app:strokeColor="#33FFC46B"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
