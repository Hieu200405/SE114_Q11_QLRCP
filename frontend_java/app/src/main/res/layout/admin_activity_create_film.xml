<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/primary_bg">


    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/background_back_button"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:src="@drawable/ic_back" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/headerLogo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_logo_toto_cinema"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_logo_circle"
            android:padding="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" />

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="THÊM PHIM MỚI"
            android:textColor="@color/colorTextIcons"
            android:textSize="@dimen/_14sdp" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Thumbnail -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Thumbnail"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="12dp"
                android:background="@color/input_field_stroke"
                android:src="@drawable/movie_image"
                android:scaleType="centerCrop" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPickThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn Thumbnail"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                app:icon="@drawable/ic_add_photo"
                app:iconSize="@dimen/_15sdp"
                app:iconPadding="8dp"/>

            <!-- Danh sách ảnh bìa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Ảnh Bìa"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCoverImages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:padding="4dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="12dp">

                <!-- Tên phim -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên phim:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/input_field_bg"
                    app:boxStrokeColor="@color/input_field_stroke"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editFilmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập tên phim"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:background="@null"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mô tả -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/input_field_bg"
                    app:boxStrokeColor="@color/input_field_stroke"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top|start"
                        android:hint="Nhập mô tả phim"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:scrollbars="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="12dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:background="@null"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Thời lượng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng (phút):"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/input_field_bg"
                    app:boxStrokeColor="@color/input_field_stroke"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editRunningTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ví dụ: 120"
                        android:inputType="number"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:background="@null"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Đánh giá Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <!-- Rating -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đánh giá (0-10):"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_field_bg"
                            app:boxStrokeColor="@color/input_field_stroke"
                            android:layout_marginTop="4dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="2dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editRating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="VD: 8.5"
                                android:inputType="numberDecimal"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="@color/primary_text"
                                android:textColorHint="@color/secondary_text"
                                android:background="@null"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Count -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số đánh giá:"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_field_bg"
                            app:boxStrokeColor="@color/input_field_stroke"
                            android:layout_marginTop="4dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="2dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editRatingCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="VD: 100"
                                android:inputType="number"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="@color/primary_text"
                                android:textColorHint="@color/secondary_text"
                                android:background="@null"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Ngày ra mắt -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày ra mắt (YYYY-MM-DD):"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/input_field_bg"
                    app:boxStrokeColor="@color/input_field_stroke"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chọn ngày ra mắt"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:background="@null"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ngày kết thúc -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày kết thúc (Không bắt buộc):"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="12dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/input_field_bg"
                    app:boxStrokeColor="@color/input_field_stroke"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chọn ngày kết thúc"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:background="@null"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCreateFilm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="LƯU PHIM MỚI"
                android:textColor="@color/white"
                app:backgroundTint="#22C55E"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
