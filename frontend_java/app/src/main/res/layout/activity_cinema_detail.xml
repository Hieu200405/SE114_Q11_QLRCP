<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Custom Header acting as Toolbar -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="@color/colorTextIcons" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/headerLogo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_logo_toto_cinema"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_logo_circle"
                android:padding="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" />

            <TextView
                android:id="@+id/titleToolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_bold"
                android:maxLines="1"
                android:text="CHI TIẾT RẠP"
                android:textColor="@color/colorTextIcons"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <!-- Cinema Image -->
        <ImageView
            android:id="@+id/ivCinemaImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:src="@drawable/ic_launcher_background" />

        <!-- Cinema Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivCinemaImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Cinema Name -->
                <TextView
                    android:id="@+id/tvCinemaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="CGV Vincom Đồng Khởi" />

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_navigate"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="72 Lê Thánh Tôn, Bến Nghé, Quận 1, TP.HCM" />

                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:text="1900 6017" />

                </LinearLayout>

                <!-- Distance & Duration -->
                <LinearLayout
                    android:id="@+id/layoutDistanceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_distance_tag"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="5.2 km" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_duration_tag"
                        android:fontFamily="@font/ubuntu_regular"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        tools:text="~15 phút" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Description -->
        <TextView
            android:id="@+id/labelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Giới thiệu"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardInfo" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/labelDescription"
            tools:text="Rạp chiếu phim CGV tại Vincom Center Đồng Khởi, với hệ thống âm thanh và hình ảnh hiện đại nhất."
            tools:visibility="visible" />

        <!-- Rooms Section -->
        <TextView
            android:id="@+id/labelRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Danh sách phòng chiếu"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/labelRooms"
            tools:itemCount="3"
            tools:listitem="@layout/admin_item_room"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnViewRooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_light"
            android:text="Xem tất cả phòng chiếu"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/rvRooms" />

        <!-- Navigate Button -->
        <Button
            android:id="@+id/btnNavigate"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_save_light"
            android:drawableStart="@drawable/ic_navigate"
            android:drawablePadding="8dp"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Chỉ đường đến rạp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnViewRooms" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

