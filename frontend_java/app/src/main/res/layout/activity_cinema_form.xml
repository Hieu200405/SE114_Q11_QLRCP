<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Custom Header acting as Toolbar -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="@color/colorTextIcons" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/headerLogo"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_logo_toto_cinema"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_logo_circle"
                android:padding="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" />

            <TextView
                android:id="@+id/titleToolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_bold"
                android:maxLines="1"
                android:text="THÊM RẠP MỚI"
                android:textColor="@color/colorTextIcons"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <!-- Cinema Image -->
        <ImageView
            android:id="@+id/ivCinemaImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_placeholder_light"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:src="@drawable/ic_launcher_background" />

        <!-- Upload Image Button -->
        <ImageView
            android:id="@+id/btnUploadImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_circle_button_light"
            android:contentDescription="Upload Image"
            android:padding="12dp"
            android:src="@drawable/ic_add_photo"
            app:layout_constraintBottom_toBottomOf="@id/ivCinemaImage"
            app:layout_constraintEnd_toEndOf="@id/ivCinemaImage" />

        <!-- Cinema Name -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Tên rạp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCinemaImage" />

        <EditText
            android:id="@+id/etCinemaName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_light"
            android:hint="Nhập tên rạp chiếu phim"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_regular"
            app:layout_constraintTop_toBottomOf="@id/labelName" />

        <!-- Address with Search -->
        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Địa chỉ"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCinemaName" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_light"
            android:drawableEnd="@drawable/ic_search"
            android:drawableTint="@color/secondary_text"
            android:hint="Tìm hoặc nhập địa chỉ"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_regular"
            app:layout_constraintTop_toBottomOf="@id/labelAddress" />

        <!-- Coordinates (Auto-filled) -->
        <TextView
            android:id="@+id/labelCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Tọa độ"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAddress" />

        <!-- Button to open Map Picker -->
        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/primary_blue"
            android:drawableStart="@drawable/ic_navigate"
            android:drawableTint="@color/white"
            android:drawablePadding="4dp"
            android:paddingHorizontal="12dp"
            android:text="Chọn trên bản đồ"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintBottom_toBottomOf="@id/labelCoordinates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelCoordinates" />

        <LinearLayout
            android:id="@+id/layoutCoordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/labelCoordinates">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vĩ độ"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_light"
                    android:hint="10.776889"
                    android:inputType="numberDecimal|numberSigned"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kinh độ"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_light"
                    android:hint="106.701686"
                    android:inputType="numberDecimal|numberSigned"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Phone -->
        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Số điện thoại"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCoordinates" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_light"
            android:hint="1900 6017"
            android:inputType="phone"
            android:paddingHorizontal="12dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_regular"
            app:layout_constraintTop_toBottomOf="@id/labelPhone" />

        <!-- Description -->
        <TextView
            android:id="@+id/labelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Mô tả"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPhone" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_light"
            android:gravity="top|start"
            android:hint="Nhập mô tả về rạp chiếu phim"
            android:inputType="textMultiLine"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_regular"
            app:layout_constraintTop_toBottomOf="@id/labelDescription" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etDescription">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_cancel_light"
                android:text="Hủy"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_save_light"
                android:text="Lưu"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

